    "version": "0.2.0",
    "configurations": [
        // Debug config for running the Flask server in development
        {
            "name": "Python: Flask (debug)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "flaskr",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        // Database initialization for the Flask app
        {
            "name": "Python: Flask (init-db)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "flaskr",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "init-db"
            ],
            "jinja": false
        }
    ]
}